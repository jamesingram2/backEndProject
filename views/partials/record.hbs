<div class="col-lg-4 col-md-6 col-sm-12">
   <div class="wrapper">
      <p class="p-3 mt-3">
      <img src="{{imageUrl}}" alt="Record Image"><br><br>
      Title: {{title}}<br>
      Record ID: {{recordId}}<br>
      Author: {{author}}<br>
      Subject: {{subject}}<br>
      Format: {{format}}<br>
      Classification: {{classification}}<br>
      {{#if checkoutStatus}}
      <span style="color:red;">Checked out until {{dueDate}}</span>
      {{else}}
      <span style="color:green;">Available for checkout</span>
      {{/if}}
      <button type="button" class="btn mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal{{recordId}}">Summary</button>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal{{recordId}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{title}}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            {{description}}
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
         </div>
      </div>
      </div>
      </p>
   </div>
</div>
